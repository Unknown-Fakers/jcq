<view class="page" data-weui-theme="{{ theme }}">
  <view class="weui-panel">
    <view class="weui-panel__bd">
      <view class="weui-media-box weui-media-box_small-appmsg">
        <view class="weui-cells weui-cells_in-small-appmsg">
          <navigator url="/pages/batch/join" class="weui-cell weui-cell_example weui-cell_access" hover-class="weui-cell_active">
            <view class="weui-cell__hd">
              <image src="/asset/join_batch.png" style="width: 60rpx;height: 60rpx;margin-right: 16px;vertical-align:middle;" />
            </view>
            <view class="weui-cell__bd weui-cell_primary">
              <view>加入搭子圈</view>
            </view>
            <view class="weui-cell__ft weui-cell__ft_in-access"></view>
          </navigator>
          <navigator url="/pages/batch/create" class="weui-cell weui-cell_example weui-cell_access" hover-class="weui-cell_active">
            <view class="weui-cell__hd">
              <image src="/asset/create_batch.png" style="width: 60rpx;height: 60rpx;margin-right: 16px;vertical-align:middle;" />
            </view>
            <view class="weui-cell__bd weui-cell_primary">
              <view>创建搭子圈</view>
            </view>
            <view class="weui-cell__ft weui-cell__ft_in-access"></view>
          </navigator>
        </view>
      </view>
    </view>
  </view>

  <mp-cells wx:if="{{ batches.length }}" title="我加入的搭子圈">
    <swipe-cell wx:for="{{ batches }}" wx:key="_id" bind:delete="quit" data-batch-id="{{ item._id }}" data-index="{{ index }}">
      <mp-cell value="{{ item.name }}" />
    </swipe-cell>
  </mp-cells>
</view>
